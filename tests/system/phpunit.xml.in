<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="servers/@target@.php" verbose="true">
    <testsuites>
        <testsuite name="@target@ System">
            <directory suffix="Test.php">./suites</directory>
        </testsuite>
    </testsuites>

    <php>
        <var name="browser_url" value="@test-url@"/>
    </php>

    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../../source</directory>
            <exclude>
                <directory>administrator/cache</directory>
                <directory>administrator/help</directory>
                <directory>administrator/includes</directory>
                <directory>administrator/language</directory>
                <directory>administrator/manifests</directory>
                <directory>administrator/templates</directory>
                <directory>bin</directory>
                <directory>cache</directory>
                <directory>cli</directory>
                <directory>images</directory>
                <directory>language</directory>
                <directory>layouts</directory>
                <directory>libraries</directory>
                <directory>logs</directory>
                <directory>media</directory>
                <directory>templates</directory>
                <directory>tmp</directory>
            </exclude>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-php" target="../../build/logs/@target@/system.clover.serialized"/>
        <log type="junit" target="../../build/logs/@target@/system.junit.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>
