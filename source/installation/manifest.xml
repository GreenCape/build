<extension type="component" version="2.5.0" method="upgrade">
    <!-- This manifest file is used by Joomla! 2.5 and up -->
    <name>SQL</name>
    <author>Niels Braczek</author>
    <creationDate>Aug 2013</creationDate>
    <authorEmail>nbraczek@bsds.de</authorEmail>
    <authorUrl>http://bsds.de</authorUrl>
    <copyright>Copyright (C) 2012-2013 BSDS Braczek Software- und DatenSysteme. All rights reserved.</copyright>
    <license>GNU/GPL, http://www.gnu.org/licenses/gpl-2.0.html</license>
    <version>1.0.0</version>
    <description></description>

    <administration>
        <menu img="components/com_sql/assets/images/icon-16-sql.png">COM_SQL</menu>
        <submenu>
            <menu link="option=com_sql&amp;view=sql" img="components/com_sql/assets/images/icon-16-run.png">COM_SQL_RUN_QUERY</menu>
            <menu link="option=com_sql&amp;view=queries" img="components/com_sql/assets/images/icon-16-save.png">COM_SQL_SAVED_QUERIES</menu>
        </submenu>

        <files folder="admin">
            <filename>access.xml</filename>
            <filename>autoload.php</filename>
            <filename>config.xml</filename>
            <filename>index.html</filename>
            <filename>install.sql</filename>
            <filename>sql.php</filename>
            <filename>toolbar.php</filename>
            <folder>assets</folder>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>lib</folder>
            <folder>models</folder>
            <folder>mvc</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>

        <languages folder="languages">
            <language tag="en-GB">en-GB.com_sql.ini</language>
            <language tag="en-GB">en-GB.com_sql.sys.ini</language>
        </languages>
    </administration>

    <scriptfile>script.php</scriptfile>

    <install>
        <sql>
            <file charset="utf8" driver="mysql">install.sql</file>
            <file charset="utf8" driver="mysqli">install.sql</file>
        </sql>
    </install>

    <updateservers>
        <server type="extension" priority="1" name="Sql Updates">http://mijosoft.com/joomla_updates.xml</server>
    </updateservers>
</extension>